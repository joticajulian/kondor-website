{
  "name": "kondor-nft-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node server.js"
  },
  "dependencies": {
    "fastify": "^3.26.0",
    "fastify-static": "^4.5.0",
    "joi": "^17.9.2"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.9",
    "@types/chrome": "^0.0.176",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "axios": "^1.3.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.1.0",
    "ts-loader": "~8.2.0",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:vue/recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "ignorePatterns": [
      "lib/*.js"
    ],
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "indent": [
        "error",
        2
      ]
    }
  }
}
